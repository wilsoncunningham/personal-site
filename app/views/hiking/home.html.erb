        { src: "hiking/conness-lake.jpg", caption: "Conness Lakes, Mono County, California", alt: "Mountain landscape with a rocky alpine trail leading to clear blue Conness Lake under a partly cloudy sky" },
        { src: "hiking/flatiron-2.jpg", caption: "Flatiron, Superstition Mountains, Arizona", alt: "Hiker standing on a rocky ledge with expansive desert and mountain views from Flatiron in Arizona" },
