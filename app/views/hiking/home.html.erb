        { src: "hiking/humphreys.jpg", caption: "Humphreys Peak, Flagstaff, Arizona", alt: "Hiker standing on snowy summit with surrounding peaks and expansive sky at Humphreys Peak, Arizona" },
        { src: "hiking/bright-angel.jpg", caption: "Bright Angel Trail, Grand Canyon, Arizona", alt: "Hiker standing on sunlit trail with dramatic canyon cliffs and bright blue sky on Bright Angel Trail, Grand Canyon" },
        { src: "hiking/toms-thumb.jpg", caption: "Tom's Thumb, Scottsdale, Arizona", alt: "Hiker standing on sandy trail in front of large granite spire under dramatic clouds at Tom’s Thumb, Arizona" },
