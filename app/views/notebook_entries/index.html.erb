<h1 class="text-2xl font-bold mb-4">Notebook</h1>

<% if @notebook_entries.any? %>
  <div class="space-y-6">
    <% @notebook_entries.each do |entry| %>
      <div class="p-4 rounded-xl shadow bg-white border">
        <div class="flex justify-between items-center mb-2">
          <h2 class="text-xl font-semibold"><%= entry.title.presence || "(Untitled)" %></h2>
          <span class="text-sm text-gray-500"><%= entry.xata_createdat.strftime("%b %d, %Y") %></span>
        </div>

        <div class="prose">
          <%= simple_format(entry.content) %>
        </div>

        <% if entry.link_url.present? %>
          <p class="mt-2">
            ðŸ”— <a href="<%= entry.link_url %>" class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer"><%= entry.link_url %></a>
          </p>
        <% end %>

        <% if entry.image_url.present? %>
          <div class="mt-4">
            <img src="<%= entry.image_url %>" alt="Notebook image" class="max-w-full rounded" />
          </div>
        <% end %>

        <% if entry.tags.present? %>
          <div class="mt-3">
            <% entry.tags.each do |tag| %>
              <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded mr-1">#<%= tag %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500">No notebook entries yet.</p>
<% end %>
