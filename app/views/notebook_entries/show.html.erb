<div class="container page-content py-5">

  <div class="py-4">
    <h1 class="fire-red">
      <%= @the_entry.title.presence || "(Untitled)" %>
    </h1>
    <span class="text-sm caption"><%= @the_entry.created_at.strftime("%b %d, %Y") %></span>
  </div>

  <div class="prose">
    <%= simple_format(@the_entry.content) %>
  </div>

  <% if @the_entry.link_url.present? %>
    <p class="mt-2">
      <a href="<%= @the_entry.link_url %>" class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer"><%= @the_entry.link_url %></a>
    </p>
  <% end %>

  <% if @the_entry.image_url.present? %>
    <div class="mt-4">
      <img src="<%= @the_entry.image_url %>" alt="Notebook image" class="max-w-full rounded" />
    </div>
  <% end %>

  <% if @the_entry.tags.present? %>
    <div class="mt-3">
      <% @the_entry.tags.each do |tag| %>
        <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded mr-1">#<%= tag %></span>
      <% end %>
    </div>
  <% end %>

  

</div>>
