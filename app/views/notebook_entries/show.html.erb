<div class="container page-content py-5">

  <% if current_user && current_user.admin? %>
    <a href="/notebook/<%= @the_entry.id %>/edit" class="btn btn-light">
      Edit
    </a>
  <% end %>

  <div>
    <a href="/notebook" class="navigation-link link-offset-1 link-offset-1-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
      ‚Üê Back to notebook
    </a>
  </div>

<!--  class="inline-block libre-franklin text-muted-foreground hover:text-foreground transition-colors duration-300 text-sm"
  class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"-->

  <div class="py-4">
    <h1 class="fire-red">
      <%= @the_entry.title.presence || "(Untitled)" %>
    </h1>
    <span class="text-sm caption"><%= @the_entry.created_at.strftime("%b %d, %Y") %></span>
  </div>

  <div class="prose">
    <%= simple_format(@the_entry.content) %>
  </div>

  <% if @the_entry.link_url.present? %>
    <p class="mt-2">
      <a href="<%= @the_entry.link_url %>" class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer"><%= @the_entry.link_url %></a>
    </p>
  <% end %>

  <% if @the_entry.image_url.present? %>
    <div class="mt-4">
      <img src="<%= @the_entry.image_url %>" alt="Notebook image" class="max-w-full rounded" />
    </div>
  <% end %>

  <% if @the_entry.tags.present? %>
    <div class="mt-3">
      <% @the_entry.tags.split(',').each do |tag| %>
        <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded mr-1">#<%= tag.strip %></span>
      <% end %>
    </div>
  <% end %>

  

</div>>
